<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                   android:layout_width="match_parent"
                                   android:layout_height="wrap_content"
                                   app:cardCornerRadius="4dp" app:cardElevation="4dp"
                                   android:foreground="?attr/selectableItemBackground" android:clickable="true"
                                   android:layout_margin="8dp">

    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingStart="10dp" android:paddingEnd="10dp" android:paddingTop="14dp"
            android:paddingBottom="14dp">
        <TextView
                android:text="TextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/textCardTitulo" android:textSize="16sp"
                android:textStyle="bold" android:layout_marginBottom="6dp"
                android:visibility="visible" android:maxLines="2" android:ellipsize="end"/>
        <TextView
                android:text="TextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/textCardConteudo"
                android:ellipsize="end" android:maxLines="4"/>
    </LinearLayout>
</androidx.cardview.widget.CardView>